{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "cleanjs"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "destructuring": true,
      "spread": true,
      "restParams": true,
      "blockBindings": true,
    }
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "error",
    "arrow-parens": "error",
    "no-confusing-arrow": "error",
    "fp/no-nil": "off",
    "fp/no-class": "off",
    "fp/no-unused-expression": "off",
    "better/no-ifs": "off",
    "better/explicit-return": "off",
  },  

}
